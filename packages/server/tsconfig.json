{
	"compilerOptions": {
		"composite": true,
		"target": "ESNext",
		"module": "commonjs",
		"rootDir": "./src/",
		"outDir": "./dist/",
		"strict": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"esModuleInterop": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"noImplicitAny": true, 
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}